          </Menu>
        </menus>
      </MenuBar>
      <VBox alignment="CENTER" layoutX="273.0" layoutY="66.0" prefHeight="639.0" prefWidth="734.0" spacing="20.0">
         <TextField promptText="Search..." fx:id="searchField">
            <VBox.margin>
               <Insets left="200.0" right="200.0" />
            </VBox.margin>
         </TextField>
         <Button fx:id="EditBtn" mnemonicParsing="false" onAction="#editClick" text="View selected row" />
         <TableView fx:id="TV" prefHeight="464.0" prefWidth="634.0">
            <columns>
               <TableColumn fx:id="idColumn" prefWidth="62.0" text="Id" />
               <TableColumn fx:id="deviceColumn" minWidth="190.0" prefWidth="75.0" text="Device" />
               <TableColumn fx:id="ownerColumn" prefWidth="190.0" text="Owner" />
               <TableColumn fx:id="locationColumn" prefWidth="190.0" text="Location" />
            </columns>
         </TableView>
         <padding>
            <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
         </padding>
          
                                    </VBox>
   </children>
