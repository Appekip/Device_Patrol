<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="720.0" prefWidth="1280.0"
  xmlns="http://javafx.com/javafx/17"
  fx:controller="org.otpr11.itassetmanagementapp.ui.controllers.MainViewController">
  <children>
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
      AnchorPane.topAnchor="0.0" fx:id="deviceViewPane">
      <center>
        <TableView BorderPane.alignment="CENTER" fx:id="deviceTable">
          <BorderPane.margin>
            <Insets/>
          </BorderPane.margin>
          <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
          </columnResizePolicy>
          <columns>
            <TableColumn maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="ID"
              fx:id="idColumn"/>
            <TableColumn maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Nickname"
              fx:id="nicknameColumn"/>
            <TableColumn maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0"
              text="Manufacturer" fx:id="manufacturerColumn"/>
            <TableColumn maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Model Name"
              fx:id="modelNameColumn"/>
            <TableColumn maxWidth="-1.0" minWidth="75.0" prefWidth="-1.0" text="Model ID"
              fx:id="modelIDColumn"/>
            <TableColumn maxWidth="-1.0" minWidth="75.0" prefWidth="-1.0" text="Model Year"
              fx:id="modelYearColumn"/>
            <TableColumn maxWidth="-1.0" minWidth="75.0" prefWidth="-1.0" text="Device Type"
              fx:id="deviceTypeColumn"/>
            <TableColumn maxWidth="1.7976931348623157E308" minWidth="105.0"
              prefWidth="-1.0" text="HW Configuration" fx:id="hwConfigurationColumn"/>
            <TableColumn maxWidth="1.7976931348623157E308" minWidth="105.0" prefWidth="-1.0"
              text="Operating Systems" fx:id="osColumn"/>
            <TableColumn style="-fx-alignment: CENTER;" maxWidth="-1.0" minWidth="110.0" prefWidth="-1.0"
              text="User" fx:id="userColumn"/>
            <TableColumn style="-fx-alignment: CENTER;" maxWidth="-1.0" minWidth="110.0" prefWidth="-1.0"
              text="Status" fx:id="statusColumn"/>
            <TableColumn style="-fx-alignment: CENTER;" maxWidth="-1.0" minWidth="110.0" prefWidth="-1.0"
              text="Location" fx:id="locationColumn"/>
            <TableColumn style="-fx-alignment: CENTER;" maxWidth="-1.0" minWidth="115.0" prefWidth="-1.0"
              text="Action" fx:id="actionColumn"/>
          </columns>
        </TableView>
      </center>
      <top>
        <MenuBar BorderPane.alignment="CENTER">
          <menus>
            <Menu mnemonicParsing="false" text="File" fx:id="menuFile">
              <items>
                <Menu mnemonicParsing="false" text="New" fx:id="menuNew">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#handleNewDeviceClick"
                      text="Device..." fx:id="menuItemDevice"/>
                    <MenuItem mnemonicParsing="false" onAction="#handleNewHWConfigurationClick"
                      text="Hardware configuration..." fx:id="menuItemHW"/>
                    <MenuItem mnemonicParsing="false" onAction="#handleNewOSClick"
                      text="Operating system..." fx:id="menuItemOS"/>
                    <MenuItem mnemonicParsing="false" onAction="#handleNewUserClick"
                      text="User..." fx:id="menuItemUser"/>
                    <MenuItem mnemonicParsing="false" onAction="#handleNewLocationClick"
                      text="Location..." fx:id="menuItemLocation"/>
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Manage">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#handleManageClick"
                      text="Existing..."/>
                  </items>
                </Menu>
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help" fx:id="menuHelp">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleAboutClick" text="About"
                  fx:id="menuItemAbout"/>
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Language" fx:id="menuLang">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleEngClick" text="English"
                  fx:id="langEng"/>
                <MenuItem mnemonicParsing="false" onAction="#handleFinClick" text="Finnish"
                  fx:id="langFin"/>
                <MenuItem mnemonicParsing="false" onAction="#handleSweClick" text="Swedish"
                  fx:id="langSwe"/>
              </items>
            </Menu>
          </menus>
        </MenuBar>
      </top>
    </BorderPane>
  </children>
</AnchorPane>
